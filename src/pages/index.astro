---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import SkillsOverview from '../components/SkillsOverview.astro';
import DetailedSkills from '../components/DetailedSkills.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<Layout title="Darius Atsu">
	<main class="min-h-screen">
		<ThemeToggle />
		
		<div class="container mx-auto max-w-7xl">
			<!-- Hero Section -->
			<Hero />

			<!-- Skills Overview -->
			<SkillsOverview />

			<!-- Detailed Skills -->
			<DetailedSkills />

			<!-- Navigation/Links -->
			<nav class="flex justify-center gap-12 py-16 border-t border-gray-200 dark:border-gray-800 opacity-0 animate-[fade-in_0.8s_ease-out_1.6s_forwards] motion-reduce:animate-none motion-reduce:opacity-100">
				<a 
					href="https://github.com/dariusatsu" 
					target="_blank" 
					rel="noopener noreferrer"
					class="text-sm font-semibold tracking-widest text-gray-500 hover:text-black dark:hover:text-white transition-colors duration-200 uppercase"
				>
					GitHub
				</a>
				<a 
					href="mailto:contact@dariusatsu.com" 
					class="text-sm font-semibold tracking-widest text-gray-500 hover:text-black dark:hover:text-white transition-colors duration-200 uppercase"
				>
					Email
				</a>
				<a 
					href="/cv" 
					class="text-sm font-semibold tracking-widest text-gray-500 hover:text-black dark:hover:text-white transition-colors duration-200 uppercase"
				>
					CV
				</a>
			</nav>
		</div>
	</main>
</Layout>

